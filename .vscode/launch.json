    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/flaskapp/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "DEBUG": "True"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: PyCam",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pycam/app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "True"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}